@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<section class="d-flex justify-content-center align-items-center h-100">
    <div class="carousel-dark slide w-75 w-lg-50" data-bs-ride="carousel" id="cardCarousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#cardCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#cardCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#cardCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="card w-100" id="card1">
                    <div class="card-header">
                        <h4 class="card-title">Welcome</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text" style="min-height: 5rem;">
                            Hello
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="card w-100" id="card2">
                    <div class="card-header">
                        <h4 class="card-title">Sign-up</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text" style="min-height: 5rem;">
                            Test
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="card w-100" id="card3">
                    <div class="card-header">
                        <h4 class="card-title">Thanks</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text" style="min-height: 5rem;">
                            Bye
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
