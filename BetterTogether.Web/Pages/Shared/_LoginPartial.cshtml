@using BetterTogether.Web.Models.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav gap-2">
    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole(Roles.AdminRole))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Admin" asp-page="/Events/Index">Events</a>
            </li>
        }
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-success" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
