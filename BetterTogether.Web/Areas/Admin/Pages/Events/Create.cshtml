@page
@using BetterTogether.Web.Infrastructure
@model BetterTogether.Web.Areas.Admin.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Create Event";
}

<section class="p-3 bg-light">
    <h3>@ViewData["Title"]</h3>
    <form method="post">
        <div class="mb-3">
            <label class="form-label" for="nameInput">Name</label>
            <input class="form-control" type="text" asp-for="EventEdit.Name" value="" id="nameInput" placeholder="My event"/>
        </div>
        <div class="mb-3">
            <label class="form-label" for="descriptionArea">Description</label>
            <textarea class="form-control" type="text" asp-for="EventEdit.Description" value="" id="descriptionArea" rows="7"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label" for="nameInput">Start Date & Time</label>
            <input class="form-control" type="datetime-local" min="@DateTime.Now.ToIso8601String()" asp-for="EventEdit.StartDate" value="@Model.EventEdit.StartDate.ToIso8601String()" id="startDateInput"/>
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="EventEdit.IsActive" value="@Model.EventEdit.IsActive" id="isActiveCheck">
                <label class="form-check-label" for="isActiveCheck">Is Active</label>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" asp-area="Admin" asp-page="/Events/Index">Cancel</a>
            <button class="btn btn-success">Save</button>
        </div>
    </form>
</section>
